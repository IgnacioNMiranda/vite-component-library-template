{
  "files": {
    "ignore": ["./src/*.json", "./.vscode/*.json"]
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedImports": "warn"
      }
    }
  },
  "formatter": {
    "lineWidth": 120,
    "lineEnding": "lf",
    "ignore": ["node_modules", ".env.*"]
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "indentStyle": "space",
      "lineEnding": "lf",
      "trailingCommas": "none"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "trailingCommas": "all",
      "indentStyle": "space"
    }
  }
}
